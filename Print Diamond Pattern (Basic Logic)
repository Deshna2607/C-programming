#include <stdio.h>
int main() {
    // Write C code here
    int n,i,j,space;
    scanf("%d",&n);
    i=1;
    while(i<=n) {
        space = n-i;
        while(space--)printf("");
        j = 1;
        while(j<=2*i-1){
            printf("*");
            j++;
        }
         printf("\n");
         i++;
    }
    i=n-1;
    while(i>0){
        space = n-i;
        while(space--)printf("");
        j=1;
        while(j<=2*i-1){
            printf("*");
            i--;
        }
        return 0;
    }
    
    return 0;
}
